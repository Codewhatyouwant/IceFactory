<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Define your custom styles here -->
    <style name="MyDatePickerSpinnerStyle" parent="@android:style/Widget.DatePicker">
        <!-- Customize dropdown elements' colors here -->
        <item name="android:textColorPrimary">@color/headerColour</item>
        <item name="android:colorControlNormal">@color/headerColour</item>
        <item name="android:spinnerDropDownItemStyle">@style/MySpinnerDropDownItemStyle</item>
    </style>

    <style name="MySpinnerDropDownItemStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:textColor">@color/headerColour</item>
        <item name="android:background">@color/cardBackground</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>
</resources>